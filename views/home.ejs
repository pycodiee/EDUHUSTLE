    <script>
        const one = document.querySelector(".one");
        const two = document.querySelector(".two");
        const three = document.querySelector(".three");
        const four = document.querySelector(".four");
        const five = document.querySelector(".five");

        // Array of steps for easier automation
        const steps = [one, two, three, four, five];
        let currentStep = 0;  // To track the current step

        // Function to update the progress
        function updateProgress() {
            // Remove "active" class from all steps
            steps.forEach((step) => step.classList.remove("active"));

            // Add "active" class to the current step
            steps[currentStep].classList.add("active");

            // Increment the step for next interval
            currentStep++;

            // If the last step is reached, stop the interval
            if (currentStep >= steps.length) {
                clearInterval(progressInterval);
            }
        }

        // Start the progress tracker
        const progressInterval = setInterval(updateProgress, 10000); // 10 seconds interval
    </script>
